// ============================================
// 認證模組 - 密碼重設 Token
// ============================================

// 密碼重設 Token
model PasswordResetToken {
  id String @id @default(cuid())

  phone String // 電話號碼
  token String @unique // 重設 token

  // 狀態
  used      Boolean  @default(false) // 是否已使用
  expiresAt DateTime // 過期時間

  createdAt DateTime @default(now())

  @@index([phone])
  @@index([expiresAt])
  @@map("password_reset_tokens")
}
