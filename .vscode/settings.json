{
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/.next": true,
    "**/node_modules": true,
    "**/*.log": true,
    "**/pnpm-lock.yaml": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true
  },
  "search.exclude": {
    "**/.next": true,
    "**/node_modules": true,
    "**/pnpm-lock.yaml": true,
    "**/*.log": true
  },
  "css.lint.unknownAtRules": "ignore",
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true
  }
}
